{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true,
    "esModuleInterop": true,
    "strict": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "checkJs": true,
    "types": [
      "bun-types", // add Bun global
      "mocha"
    ],
    "baseUrl": "./"
  },
  "include": [
    "types.d.ts",
    "src/**/*",
    "tests/**/*",
    "index.js",
    "playground.js",
    "deployment.json",
    "stackr.config.js",
    "genesis-state.json"
  ]
}
