{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "module": "es2022",
    "rootDir": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",     
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "index.ts"
  ],
  "exclude": ["node_modules"]
}
